<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/photo_image_view"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="@dimen/dimen_default"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/photo_image_view"
            android:layout_marginLeft="@dimen/dimen_default"
            android:layout_marginRight="@dimen/dimen_default"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/photo_id_text_view"
            style="@style/DetailsTextView"
            android:layout_below="@+id/photo_image_view"/>

        <TextView
            android:id="@+id/user_id_text_view"
            style="@style/DetailsTextView"
            android:layout_below="@+id/photo_id_text_view"
            />

        <TextView
            android:id="@+id/title_text_view"
            style="@style/DetailsTextView"
            android:layout_below="@+id/user_id_text_view"/>

        <TextView
            android:id="@+id/body_text_view"
            style="@style/DetailsTextView"
            android:layout_below="@+id/title_text_view"
            android:layout_marginBottom="50dp"/>


    </RelativeLayout>
</ScrollView>
